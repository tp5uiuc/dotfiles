# top-most EditorConfig file
root = true

# all files
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = tab
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.{cpp,c,py,sh}]
indent_style = tab
indent_size = 4
max_line_length = 88

[Makefile]
indent_style = tab
indent_size = 4
